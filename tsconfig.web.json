{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "sourceMap": false,
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "lib": ["ES2016", "DOM"],
    "paths": {
      "@idraw/studio": ["./packages/studio/src/index.ts"],
      "@idraw/studio-base": ["./packages/studio-base/src/index.ts"]
    }
  },
  "include": [
    "packages/*/src",
    "packages/*/__tests__",
    "packages/*/dev",
    "examples", 
    "node_modules/idraw/dist/esm/index.d.ts"
  ],
  "exclude": [
    "packages/*/dist",
  ]
}