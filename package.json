{
  "private": false,
  "version": "0.4.0-alpha.37",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "dev": "vite-node ./scripts/dev.ts",
    "build": "vite-node ./scripts/build.ts && npm run build:bundle",
    "build:bundle": "vite-node ./scripts/build-bundle.ts",
    "clear": "rm -rf node_modules/ && rm -rf ./packages/*/dist/ && rm -rf ./packages/*/esm/ && rm -rf ./packages/*/node_modules/",
    "jest": "jest --config jest.config.js",
    "serve": "http-server ./",
    "lint": "eslint  --fix --ext .ts packages/*/src/**",
    "precommit": "npm run lint",
    "prepush": "npm run lint",
    "clear:jest": "rm -rf ./packages/*/__tests__/__snapshots__",
    "version:reset": "ts-node --project ./tsconfig.node.json ./scripts/upgrade-version.ts",
    "version:reset-for-release": "ts-node --project ./tsconfig.node.json ./scripts/upgrade-version.ts --for-release",
    "upgrade:version": "npm run version:reset && pnpm i"
  },
  "dependencies": {
    "idraw": "0.4.0-beta.38",
    "antd": "5.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@rc-component/color-picker": "^2.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/koa-compose": "^3.2.8",
    "@types/node": "^22.4.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/serve-handler": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "enquirer": "^2.4.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.9.0",
    "execa": "^9.3.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jimp": "^0.22.12",
    "koa-compose": "^4.1.0",
    "less": "^4.2.0",
    "pixelmatch": "^6.0.0",
    "pngjs": "^7.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.21.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "serve-handler": "^6.1.5",
    "terser": "^5.31.6",
    "ts-morph": "^23.0.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vite-node": "^2.0.5"
  }
}
