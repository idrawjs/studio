{
  "private": false,
  "version": "0.4.0-alpha.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "npm run build",
    "dev": "vite-node ./scripts/dev.ts",
    "build": "vite-node ./scripts/build.ts",
    "build:bundle": "vite-node ./scripts/build-bundle.ts",
    "snapshot": "npm run build:bundle && vite-node ./scripts/snapshot.ts",
    "e2e": "jest --config jest.e2e.config.js",
    "clear": "rm -rf node_modules/ && rm -rf ./packages/*/dist/ && rm -rf ./packages/*/esm/ && rm -rf ./packages/*/node_modules/",
    "jest": "jest --config jest.config.js",
    "jest:update": "jest --update-snapshot --config jest.config.js",
    "cover": "jest --config jest.cover.js",
    "beforetest": "npm run build",
    "test": "npm run jest",
    "serve": "http-server ./",
    "lint": "eslint  --fix --ext .ts packages/*/src/**",
    "precommit": "npm run lint",
    "prepush": "npm run lint",
    "clear:jest": "rm -rf ./packages/*/__tests__/__snapshots__",
    "upgrade:version": "vite-node ./scripts/upgrade-version.ts && pnpm i"
  },
  "dependencies": {
    "idraw": "0.4.0-beta.1",
    "antd": "5.12.1"
  },
  "devDependencies": {
    "@ant-design/icons": "^5.2.6",
    "@babel/core": "^7.22.19",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@rollup/plugin-json": "^6.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/koa-compose": "^3.2.6",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/serve-handler": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "antd": "^5.3.0",
    "babel-jest": "^29.7.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "enquirer": "^2.4.1",
    "esbuild": "^0.19.3",
    "eslint": "^8.49.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jimp": "^0.22.10",
    "koa-compose": "^4.1.0",
    "less": "^4.2.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.29.2",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-esbuild": "^5.0.0",
    "serve-handler": "^6.1.5",
    "terser": "^5.19.4",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-node": "^0.34.4"
  }
}
